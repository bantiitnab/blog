<h3>Edit a Person</h3>

<div>Form for editing new person</div>

<div>person name is <%=@person.name%></div>

<form action="/peoples/<%=@person.id%>" method="post">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<input type="text" name="_method" value="patch" hidden>

	<label for="name">Name:</label>
	<input type="text" name="name" id="name" value="<%=@person.name%>">

	<label for="age">Age:</label>
	<input type="text" name="age" id="age" value="<%=@person.age%>">

	<label for="address">Address:</label>
	<input type="text" name="address" id="address" value="<%=@person.address%>">

	<input type="submit" value="Submit">	
</form>



<!-- client -> request -> middleware -> rails server -->